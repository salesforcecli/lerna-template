{
  "name": "root",
  "description": "A template lerna repository for sfdx plugins",
  "author": "Salesforce",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/salesforcecli/lerna-template",
  "keywords": [
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "repository": "salesforcecli/lerna-template",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "ci-docs": "yarn sf-ci-docs",
    "clean": "lerna run clean",
    "clean-all": "lerna run clean-all",
    "compile": "lerna run compile",
    "docs": "lerna run docs",
    "format": "lerna run format",
    "install": "sf-lerna-install",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint --fix",
    "postclean-all": "yarn sf-clean all",
    "postinstall": "yarn bootstrap",
    "prepack": "lerna run prepack",
    "test": "lerna run test",
    "codecov": "codecov --disable=gcov"
  },
  "devDependencies": {
    "@salesforce/dev-config": "^2.0.0",
    "@salesforce/dev-scripts": "^0.6.2",
    "@salesforce/prettier-config": "^0.0.1",
    "@salesforce/ts-sinon": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-salesforce": "^0.1.0",
    "eslint-config-salesforce-license": "^0.1.0",
    "eslint-config-salesforce-typescript": "^0.2.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^31.6.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.0",
    "shx": "^0.3.3",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "sf-husky-commit-msg",
      "pre-commit": "sf-husky-pre-commit",
      "pre-push": "sf-husky-pre-push"
    }
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
